{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-rational-order"
  ],
  "ignoreFiles": "**/*.sass",
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": 2,
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["function", "if", "each", "include", "mixin", "use", "return"]
    }]
  }
}
